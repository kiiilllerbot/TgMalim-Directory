<header>
  <nav class="navbar fixed-top navbar-expand-lg navbar-light #fafafa grey lighten-5 scrolling-navbar">
    <div class="container">
      <%= link_to "TgMalimDir", root_path, :class=>"navbar-brand" %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <%= link_to "Stores", stores_path,:class=>"nav-link"%>
          </li>
          <li class="nav-item">
            <%= link_to "Places", places_path,:class=>"nav-link"%>
          </li>
          <li class="nav-item">
            <%= link_to "Categories", categories_path,:class=>"nav-link"%>
          </li>
        </ul>
        <ul class="navbar-nav nav-flex-icons">
          <li class="nav-item">
            <a class="nav-link"><i class="fab fa-facebook-f mt-1"></i></a>
          </li>
          <li class="nav-item">
            <a class="nav-link"><i class="fab fa-twitter mt-1"></i></a>
          </li>
          <li class="nav-item">
            <a class="nav-link"><i class="fab fa-instagram mt-1"></i></a>
          </li>
          <% if user_signed_in? %>
          <%= image_tag(current_user.image,:class=>"rounded-circle mt-1",:size=>"28x28")%>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown"
                aria-haspopup="true" aria-expanded="false">
                <%= current_user.name %>
              </a>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                <%= link_to "Update Account",edit_user_registration_path,:class=>"dropdown-item" %>
                <%= link_to "Log-Out", destroy_user_session_path,method: :delete, :class=>"dropdown-item"%>
              </div>
            </li>
            <% else %>
            <%= link_to "Admin Login", new_user_session_path, :class=>"btn btn-sm btn-success"%>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>